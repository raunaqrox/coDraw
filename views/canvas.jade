extends index
block content 
    div(id="options")
            button(id="clearCanvas") Clear Canvas
            button(id="textTool") T [t]
            button(id="circleTool") Circle [c]
            a(id="downloadCanvasLink")
                button(id="downloadCanvas") Download as Image
            div(id="penSz")
                h3(id="pSize") 5
                button(id="inc") + [+]
                button(id="dec") - [-]
            div(id="pColor") 
            div(id="penColor") 
                p pen color(hex) #
                    input(class="color{pickerFaceColor:'transparent',pickerFace:3,pickerBorder:0,pickerInsetColor:'black'}", value="000000", id="pColorInp") 
            div(id="bColor") 
            div(id="bgColor") 
                p background color(hex) #
                    input(class="color{pickerFaceColor:'transparent',pickerFace:3,pickerBorder:0,pickerInsetColor:'black'}", value="ffffff", id="bgColorInp") 
            button(id="eraser") eraser [2]
            button(id="pen") pen [1] 
    canvas(id="canvasBg", width="500", height="500")
    canvas(id="canvas", width="500", height="500")
    button(id="fullScreen") Full Screen
    div(id="toolOptions")
        p tool : pen [1]
    div(id="info")
        h3 Info
        p + key to Increase pensize
        p - key to Increase pensize
        p 1 key for pen
        p 2 key for eraser
        p enter to enter/escape full screen
    div(id="status")
        p People in room 1
    div(id="chatWindow")
        h4 chat window
        form(action="",id="sendUser")
            input(id="username",placeholder="username")
            input(type="submit",class="btn", value="send")
            p(class='error') 
        ul(id="messages")
        div(id="replyWindow")
            form(id="messageForm",action="")
                input(id="reply",autocomplete="off")
                input(type="submit",id="send", value="send") 

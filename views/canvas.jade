extends index
block content 
    div(id="options")
            h2(id="ctrl") Control Panel
            button(id="clearCanvas") Clear
            h3 background-color
            div(id="bg")
                input(id="bColorInp")
               
            hr
            h3 pen
            div(id="penSz")
                h3(id="pSize") 5
                button(id="inc") + [+]
                button(id="dec") - [-]
            br
            br
            div(id="pColor") 
            div(id="penColor") 
                p #
                    input(id="pColorInp") 
            button(id="eraser") eraser [2]
            button(id="pen") pen [1]
    canvas(id="canvas", width="500", height="500")
    button(id="fullScreen") Full Screen
    div(id="info")
        h3 Info
        p + key to Increase pensize
        p - key to Increase pensize
        p 1 key for pen
        p 2 key for eraser
        p enter to enter/escape full screen
